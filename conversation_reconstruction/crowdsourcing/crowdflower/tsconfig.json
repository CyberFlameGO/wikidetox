{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "./build/tsc/",
    "sourceMap": true,
    "target": "ES5",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    // "noImplicitUseStrict": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
