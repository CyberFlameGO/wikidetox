{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./build/tsc/",
    "sourceMap": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*.ts",
    "../convlib/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
